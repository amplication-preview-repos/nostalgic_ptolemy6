datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Rsvp {
  createdAt      DateTime                @default(now())
  event          Event?                  @relation(fields: [eventId], references: [id])
  eventId        String?
  id             String                  @id @default(cuid())
  responseStatus EnumRsvpResponseStatus?
  status         EnumRsvpStatus?
  updatedAt      DateTime                @updatedAt
  user           User?                   @relation(fields: [userId], references: [id])
  userId         String?
}

model Event {
  createdAt   DateTime  @default(now())
  date        DateTime?
  description String?
  id          String    @id @default(cuid())
  location    String?
  rsvps       Rsvp[]
  title       String?
  updatedAt   DateTime  @updatedAt
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  events    Event[]
  fullName  String?
  id        String   @id @default(cuid())
  password  String
  roles     Json
  rsvps     Rsvp[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumRsvpResponseStatus {
  Option1
}

enum EnumRsvpStatus {
  Option1
}
